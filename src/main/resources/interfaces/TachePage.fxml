<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../assets/css/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fsb.municipalite.controllers.TachePageController">
   <center>
        <VBox alignment="TOP_RIGHT">
            <children>
                <HBox minHeight="-Infinity" prefHeight="50.0" prefWidth="1154.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onClickEventAdd" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Add">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" right="5.0" top="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#UpdateTask" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Update" textAlignment="CENTER" textFill="#1b1a1b">
                            <HBox.margin>
                                <Insets right="5.0" top="5.0" />
                            </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onClicktaskRemove" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Remove">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="5.0" top="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#Taches" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Refresh">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="5.0" />
                            </HBox.margin>
                        </Button>
                        <Pane prefHeight="55.0" prefWidth="145.0" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchBox" minHeight="-Infinity" prefHeight="37.0" prefWidth="270.0" promptText="Search.." styleClass="searchField">
                     <HBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                    </children>
                </HBox>
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="Id" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="Name" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="DueDate" prefWidth="75.0" text="DueDate" />
                  <TableColumn fx:id="Employe" prefWidth="75.0" text="Employee" />
                  <TableColumn fx:id="Etat" prefWidth="75.0" text="Status" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Button mnemonicParsing="false" onAction="#selectAll" prefHeight="29.0" prefWidth="104.0" styleClass="selectAllButton" text="Select All">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            </children>
        </VBox>
   </center>
   <top>
      <Label prefHeight="25.0" prefWidth="326.0" styleClass="headers" text="Tasks" BorderPane.alignment="CENTER">
         <font>
            <Font size="22.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
