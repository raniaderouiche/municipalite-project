<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../assets/css/application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fsb.municipalite.controllers.MaterielPageController">
   <center>
      <VBox prefHeight="521.0" prefWidth="897.0">
         <children>
            <HBox prefHeight="47.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickEventAdd" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Add">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onClickEventRemove" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Remove">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="Refresh" mnemonicParsing="false" onAction="#monStock" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Refresh">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#UpdateEvent" prefHeight="35.0" prefWidth="135.0" styleClass="CustomButtons" stylesheets="@../assets/css/application.css" text="Update">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Pane prefHeight="47.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchBox" prefHeight="34.0" prefWidth="239.0" promptText="Search.." styleClass="searchField">
                     <HBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </HBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <TableView fx:id="tableView" editable="true">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="Id" prefWidth="75.0" text="Id" />
                  <TableColumn fx:id="Date" prefWidth="75.0" text="Date" />
                  <TableColumn fx:id="Version" prefWidth="75.0" text="Version" />
                  <TableColumn fx:id="Status" prefWidth="75.0" text="Status" />
                  <TableColumn fx:id="Name" prefWidth="75.0" text="Name" />
                  <TableColumn fx:id="Reference" prefWidth="75.0" text="Reference" />
                  <TableColumn fx:id="Project" prefWidth="75.0" text="Project" />
               </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>
   <top>
      <Label prefHeight="21.0" prefWidth="131.0" styleClass="headers" text="Tools" BorderPane.alignment="CENTER">
         <font>
            <Font name="Calibri Light" size="22.0" />
         </font>
      </Label>
   </top>
</BorderPane>
